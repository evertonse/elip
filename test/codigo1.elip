#funcao de entrada do programa
entrada
(
    booleano ehPar (inteiro x):
    (
        se (x%0b10) entao
            verdadeiro
        senao
            falso
    )
)

#funcao
(
    inteiro calcular_potencia_natural (inteiro base | inteiro expoente | inteiro valor_atual):
    (
        se (expoente > 1 ou expoente = 1) entao
            potencia(base | expoente-1 | valor_atual*base)
        senao
            valor_atual*base
    )
)

#funcao
(
    real multiplicacao (real fator1 | real fator2):
    (
        fator1*fator2
    )
)

